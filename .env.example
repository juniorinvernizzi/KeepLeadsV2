# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Session Configuration (REQUIRED for Production)
# Must be at least 32 characters long
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# Environment
NODE_ENV=development

# Email Configuration (Optional - SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Payment Configuration (Optional - Mercado Pago)
MERCADO_PAGO_ACCESS_TOKEN=your-mercado-pago-access-token
MERCADO_PAGO_PUBLIC_KEY=your-mercado-pago-public-key

# Replit Auth (Only for Replit environment)
# REPLIT_DOMAINS=your-replit-domain.repl.co
# REPL_ID=your-repl-id
# ISSUER_URL=https://replit.com/oidc
